<div class="header" role="banner">
    <div class="top">
        <div class="site-header">
            {% if pages["_meta"].meta.logo %}
            <div class="logo">
                <a>
                    <img src="{{ base_url }}/{{ pages["_meta"].meta.logo|url }}" alt="" />
                </a>
            </div>
            {% endif %}
            <div class="title" {{ pages["_meta"].meta.tagline ? ' class="tagline"' }}>
                <a href="{{ base_url }}">
                    <h1>{{ site_title }}</h1>
                    {{ pages["_meta"].meta.tagline|markdown }}
                </a>
            </div>
            <a class="nav-toggle flex" id="nav-toggle" title="Toggle Menu" role="button" aria-controls="nav" aria-expanded="false">
                <i class="fa fa-bars" aria-hidden="true" id="toggler"></i>
                <span class="sr-only">Toggle Menu</span>
            </a>
        </div>
        <div class="nav">
            <div id="nav" role="navigation" tabindex="-1">
                <ul class="nav-ul">
                    {% for page in pages(depthOffset=-1) if page.title and not page.hidden %}
                        {% set pageType = page.id|slice(0, 5) %}
                        <li{% if page.id==current_page.id %} class="active" {% endif %}>
                            <a href="{{ page.url }}">
                            {% if page.meta.icon  %}
                                <i class="{{ page.meta.icon }}"></i>
                            {% else %}
                                {{ page.title }}
                            {% endif %}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
    <div class="bottom flash-region">
    {% if config.session.theme == "dark" %}
        <img class="flash-img" src="assets/img/Aaken.jpg" alt="flash-img header" width="90%" height="100">
    {% else %}
        <img class="flash-img" src="assets/img/backgroundOlga2.jpg" alt="flash-img header" width="90%" height="100">
    {% endif %}
    </div>
</div>

